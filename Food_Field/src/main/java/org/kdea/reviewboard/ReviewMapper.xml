<mapper namespace="org.kdea.reviewboard.ReviewDAO"> <!--이 sql 문장과 매핑될 인터페이스의 완전한 경로-->
	<select id="getList" resultType="org.kdea.vo.BoardVO">
        select num,title,nickname,w_date,hit,recommend from board3
    </select>
	<insert id="write" parameterType="org.kdea.vo.BoardVO">
        insert into board3 (num, w_date, title, contents, shop_name, shop_add, hit, ref, recommend) 
        	values ( 0, sysdate, #{title}, #{contents}, #{shop_name}, #{shop_add}, 0, 0, 0 )
    </insert>
    <select id="read" resultType="org.kdea.vo.BoardVO">
        select num,title,contents from board3 where num=#{num}
    </select>
	
